{
	"name": "content-navigator",
	"publisher": "ggbecker",
	"displayName": "content-navigator",
	"description": "Content-Navigator is a Visual Studio Code extension which helps to navigate and create content for https://github.com/ComplianceAsCode/content/",
	"version": "0.0.8",
	"license" : "BSD-3-Clause",
	"engines": {
		"vscode": "^1.34.0"
	},
    "repository": {
      "type": "git",
      "url": "https://github.com/ggbecker/content-navigator.git"
    },
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:content-navigator.openRule",
		"onCommand:content-navigator.openOVAL",
		"onCommand:content-navigator.openBash",
		"onCommand:content-navigator.openAnsible",
		"onCommand:content-navigator.openAnaconda",
		"onCommand:content-navigator.openPuppet",
		"onCommand:content-navigator.copyRuleId",
		"*"
	],
	"main": "./out/content-navigator.js",
	"contributes": {
		"snippets": [
			{
				"language": "yaml",
				"path": "./snippets.json"
			}
		],
		"commands": [
			{
				"command": "content-navigator.openRule",
				"title": "Open Rule"
			},
			{
				"command": "content-navigator.openOVAL",
				"title": "Open OVAL"
			},
			{
				"command": "content-navigator.openBash",
				"title": "Open Bash"
			},
			{
				"command": "content-navigator.openAnsible",
				"title": "Open Ansible"
			},
			{
				"command": "content-navigator.openAnaconda",
				"title": "Open Anaconda"
			},
			{
				"command": "content-navigator.openPuppet",
				"title": "Open Puppet"
			},
			{
				"command": "content-navigator.copyRuleId",
				"title": "Copy Rule ID"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "content-navigator.openRule"
				},
				{
					"command": "content-navigator.openOVAL"
				},
				{
					"command": "content-navigator.openBash"
				},
				{
					"command": "content-navigator.openAnsible"
				},
				{
					"command": "content-navigator.openAnaconda"
				},
				{
					"command": "content-navigator.openPuppet"
				},
				{
					"command": "content-navigator.copyRuleId"
				}
			],
			"explorer/context": [
				{
					"command": "content-navigator.copyRuleId"
				}
			]
		},
		"keybindings": [
			{
				"command": "content-navigator.openRule",
				"when": "editorTextFocus",
				"key": "ctrl+alt+r"
			},
			{
				"command": "content-navigator.openOVAL",
				"when": "editorTextFocus",
				"key": "ctrl+alt+o"
			},
			{
				"command": "content-navigator.openBash",
				"when": "editorTextFocus",
				"key": "ctrl+alt+b"
			},
			{
				"command": "content-navigator.openAnsible",
				"when": "editorTextFocus",
				"key": "ctrl+alt+a"
			},
			{
				"command": "content-navigator.openAnaconda",
				"when": "editorTextFocus",
				"key": "ctrl+alt+n"
			},
			{
				"command": "content-navigator.openPuppet",
				"when": "editorTextFocus",
				"key": "ctrl+alt+p"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
